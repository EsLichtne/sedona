extends ../template.pug

block head
  +head('Фото и видео')

block content
  section.gallery-lead.triangle-decor
    picture
      source(media='(min-width: 640px)' srcset='img/sprite.svg#gallery-lead-text-tablet' width='457' height='78')
      img.gallery-lead__image(src='img/sprite.svg#gallery-lead-text-mobile' width='229' height='39' alt='Надпись «Седона».')
  section.gallery
    h1.gallery__title.title.title--secondary Фото и видео
    p.gallery__description.description
      | Не можете решиться на путешествие из-за курса? Фотографии помогут вам
      | забыть о политике и экономике.
    ul.gallery__list
      li.product-card
        h3.product-card__title Неродные просторы
        .product-card__image-wrapper
          picture
            source(media='(min-width: 1024px)' srcset='img/gallery-1-desktop.jpg' width='1200' height='400')
            source(media='(min-width: 640px)' srcset='img/gallery-1-tablet.jpg' width='648' height='400')
            img.product-card__image(src='img/gallery-1-mobile.jpg' width='280' height='280' alt='')
        p.product-card__author
          | Автор фото:&nbsp;
          span.product-card__author-name Борис
        p.product-card__likes
          span.product-card__likes-count 1350
      li.product-card
        h3.product-card__title Местная растительность
        .product-card__image-wrapper
          picture
            source(media='(min-width: 1024px)' srcset='img/gallery-2-desktop.jpg' width='400' height='267')
            source(media='(min-width: 640px)' srcset='img/gallery-2-tablet.jpg' width='324' height='267')
            img.product-card__image(src='img/gallery-2-mobile.jpg' width='280' height='280' alt='')
        p.product-card__author
          | Автор фото:&nbsp;
          span.product-card__author-name Сергей
        p.product-card__likes
          span.product-card__likes-count 143
      li.product-card
        h3.product-card__title Дорога на север
        .product-card__image-wrapper
          picture
            source(media='(min-width: 1024px)' srcset='img/gallery-3-desktop.jpg' width='400' height='267')
            source(media='(min-width: 640px)' srcset='img/gallery-3-tablet.jpg' width='324' height='267')
            img.product-card__image(src='img/gallery-3-mobile.jpg' width='280' height='280' alt='')
        p.product-card__author
          | Автор фото:&nbsp;
          span.product-card__author-name Петр
        p.product-card__likes
          span.product-card__likes-count 96
      li.product-card
        h3.product-card__title Мост дьявола
        .product-card__image-wrapper
          picture
            source(media='(min-width: 1024px)' srcset='img/gallery-4-desktop.jpg' width='400' height='267')
            source(media='(min-width: 640px)' srcset='img/gallery-4-tablet.jpg' width='324' height='267')
            img.product-card__image(src='img/gallery-4-mobile.jpg' width='280' height='280' alt='')
        p.product-card__author
          | Автор фото:&nbsp;
          span.product-card__author-name Антон
        p.product-card__likes
          span.product-card__likes-count 254
  section.presentation
    h2.presentation__title.title.title--secondary Все еще сомневаетесь?
    p.presentation__description.description
      | Смотрите видеопрезентацию и скорее за билетами,
      | пока они не подорожали в очередной раз!
    .presentation__video.video
      a.video__link(href='#' tabindex='-1')
        picture
          source(media='(min-width: 1024px)' srcset='img/video-desktop.jpg')
          source(media='(min-width: 640px)' srcset='img/video-tablet.jpg')
          img.video__image(src='img/video-mobile.jpg' alt='Видеопрезентация о Седоне.')
      button.video__button
        span.visually-hidden Запустить видео.
