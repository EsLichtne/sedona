extends ../template.pug

block head
  +head('Форма отзыва')

block header
  header.header
    +navigation('Форма отзыва')

block content
  +lead
  section.review
    h1.review__title.title.title--secondary Оставьте свой отзыв
    p.review__description.description
      | Помогите нашим отелям стать лучше! оставьте отзыв о них, а также о
      | посещенных вами
      | достопримечательностях
    form.review__form.form(
      action='https://echo.htmlacademy.ru/'
      method='post')
      fieldset.form__fieldset
        h2.form__legend.title.title--secondary Представьтесь:
        ul.form__list
          li.form__item
            label.form__label.description(for='name') Имя*:
            input#name.form__field.input.field(
              type='text'
              name='name'
              placeholder='Пётр'
              required
              pattern='/[а-яёa-z]+$/i'
              data-pristine-required-message='Введите ваше имя'
              data-pristine-pattern-message='Введите корректные данные')
          li.form__item
            label.form__label.description(for='surname') Фамилия*:
            input#surname.form__field.input.field(
              type='text'
              name='surname'
              placeholder='Пустота'
              required
              pattern='/[а-яёa-z]+$/i'
              data-pristine-required-message='Введите вашу фамилию'
              data-pristine-pattern-message='Введите корректные данные')
          li.form__item
            label.form__label.description(for='patronymic') Отчество:
            input#patronymic.form__field.input.field(
              type='text'
              name='patronymic'
              placeholder='Викторович')
      fieldset.form__fieldset
        h2.form__legend.title.title--secondary Контактная информация:
        ul.form__list
          li.form__item
            label.form__label.description(for='phone') Контактный телефон*:
            input#phone.form__field.input.field(
              type='tel'
              name='phone'
              placeholder='Введите телефон'
              required
              pattern='/^[\+]?[(]?[0-9]{3}[)]?[-\s\.]?[0-9]{3}[-\s\.]?[0-9]{4,6}$/'
              data-pristine-required-message='Введите телефон'
              data-pristine-pattern-message='Укажите корректный номер')
          li.form__item
            label.form__label.description(for='email') Электронная почта*:
            input#email.form__field.input.field(
              type='email'
              name='email'
              placeholder='Введите e-mail'
              required
              data-pristine-required-message='Введите e-mail'
              data-pristine-email-message='Введите корректный адрес')
      fieldset.form__fieldset
        .form__legend-wrapper.headline-decor
          h2.form__legend.title.title--secondary Ваше общее впечатление:
        ul.form__list
          li.form__item
            label.form__control
              input.form__field.radio-input(
                type='radio'
                name='impression'
                value='positive'
                checked)
              span.form__label.description Скорее&nbsp;положительное
          li.form__item
            label.form__control
              input.form__field.radio-input(
                type='radio'
                name='impression'
                value='negative')
              span.form__label.description Скорее&nbsp;отрицательное
          li.form__item
            label.form__control
              input.form__field.radio-input(
                type='radio'
                name='impression'
                value='difficult')
              span.form__label.description Затрудняюсь&nbsp;ответить
      fieldset.form__fieldset
        .form__legend-wrapper.headline-decor
          h2.form__legend.title.title--secondary Посещённые
            br
            | достопримечательности:
        ul.form__list
          li.form__item
            label.form__control
              input.form__field.checkbox-input(
                type='checkbox'
                name='devils-bridge'
                checked)
              span.form__label.description Мост&nbsp;Дьявола
          li.form__item
            label.form__control
              input.form__field.checkbox-input(
                type='checkbox'
                name='bell-mountain'
                checked)
              span.form__label.description Гора&#8209;Колокол
          li.form__item
            label.form__control
              input.form__field.checkbox-input(
                type='checkbox'
                name='slide-park'
                checked)
              span.form__label.description Слайд&#8209;парк
          li.form__item
            label.form__control
              input.form__field.checkbox-input(
                type='checkbox'
                name='red-rocks')
              span.form__label.description Красные&nbsp;скалы
      fieldset.form__fieldset
        .form__legend-wrapper.headline-decor
          h2.form__legend.title.title--secondary Опишите свои эмоции:
        textarea.form__textarea.textarea.field(
          name='comment') Опишите подробно все свои восторги
      .form__footer
        button.form__button.button.button--primary(type='submit') Отправить отзыв
        p.form__footnote.footnote
          small.footnote__text
            sup *
            |  — обязательные поля
