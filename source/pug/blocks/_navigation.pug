- var links = [{'Главная':'index.html'}, {'Фото и видео':'gallery.html'}, {'Форма отзыва':'form.html'}, {'Html Academy':'https://htmlacademy.ru/study'}]

mixin navigation(activePage='Главная', items=links)
  nav.navigation
    .navigation__hat
      a.navigation__logo.logo(href='#')
        img.logo__image(src='#' width='185' height='96' alt='Логотип Седоны.')
      button.navigation__button(type='button')
        span.navigation__clue.visually-hidden Открыть меню
        span.navigation__toggle
    ul.navigation__list
      each item in items
        li.navigation__item
          each href, value in item
            a.navigation__link(
              href= href
              aria-current='page'
              class=(value === activePage ? 'navigation__link--current' : ''))= value
